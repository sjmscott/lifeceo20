{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<!-- start content area -->
<div class="main-content-area member-page">
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                {{#if @member.paid}}

                    {{!-- Logged in, paying member: Redirect home --}}
                    <script>window.location = '{{@site.url}}/';</script>

                {{else if @member}}
                    {{!-- Logged in, free member: Redirect signup --}}
                    <script>window.location = '{{@site.url}}/signup/';</script>

                {{else}}
                <div class="text-center">
                    <h1 class="form-title">{{t "Sign up to"}} {{@site.title}} {{t "free plan"}}</h1>
                    <p class="form-subtitle">{{@site.description}}</p>
                </div>

                <form data-members-form="signup" class="sign-up-form">
                    <div class="form-group">
                    <input data-members-email type="email" class="form-control" name="email" placeholder="{{t "Enter your email..."}}" required autocomplete="off"/>
                    <button class="btn btn-primary" type="submit"><span>{{t "Subscribe"}}</span></button>
                    </div>
                    <div class="error-box text-center">
                        <div class="message-loading">
                            <span class="icon"></span>{{t "Please wait..."}}
                        </div>
                        <div class="message-success">
                            <span class="icon"></span><strong>{{t "Great!"}}</strong> {{t "Check your inbox and click the link to complete sign in"}}
                        </div>
                        <div class="message-error">
                            <span class="icon"></span><strong>{{t "Error!"}}</strong> {{t "Please enter a valid email address!"}}
                        </div>
                    </div>
                </form>
                {{t "Already have an account?"}} <a href="{{@site.url}}/signin/">{{t "Sign in"}}</a>
                {{/if}}
            </div>
        </div>
    </div>
</div>
<!-- end content area -->