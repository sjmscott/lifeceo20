<!DOCTYPE html>
<html lang="{{@site.lang}}">
	<head>
		{{! Document Settings }}
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		{{! Page Meta }}
		<title>{{meta_title}}</title>
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<!-- stylesheets -->
		{{! Styles'n'Scripts }}
		<link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
		<link rel="stylesheet" type="text/css" href="{{asset "css/bootstrap.min.css"}}">
		<link rel="stylesheet" type="text/css" href="{{asset "css/font-awesome.min.css"}}">
		<link rel="stylesheet" type="text/css" href="{{asset "css/hl-styles/atom-one-dark.css"}}">
		<link rel="stylesheet" type="text/css" href="{{asset "css/screen.css"}}">
		{{> config}}
		{{! Ghost outputs important style and meta data with this tag }}
		{{ghost_head}}
	</head>
	<body class="{{body_class}}">
		{{! insert header partial}}
		{{> header}}
		{{{body}}}
		{{! insert footer partial}}
		{{> footer}}
		{{#if @labs.members}}
		{{> members/notifications}}
		{{/if}}
		{{! scripts}}
        <script>
				var searchApi = '{{@site.url}}/ghost/api/v3/content/posts/?key='+api_key+'&limit=all&fields=id,title,excerpt,custom_excerpt,url,published_at&formats=plaintext';
		</script>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
		<script src="{{asset "js/bootstrap.min.js"}}"></script>
		<script src="{{asset "js/plugins.js"}}"></script>
		<script src="{{asset "js/main.js"}}"></script>
		{{ghost_foot}}
	</body>
</html>
