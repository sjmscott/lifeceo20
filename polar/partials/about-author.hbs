<!-- start about the author -->
{{#foreach authors}}
<div class="about-author clearfix">
	{{#if profile_image}}
		<a href="{{url}}" title="{{name}}"><img src="{{profile_image}}" alt="Author image" class="avatar pull-left"></a>
		{{else}}
		<a href="{{url}}" title="{{name}}"><img src="{{asset "images/default-user-image.jpg"}}" alt="Author image" class="avatar pull-left"></a>
	{{/if}}
	<div class="details">
		<h4 class="author h4">{{{t "About <a href='{url}'>{name}</a>" url=(url) name=name}}}</h4>
		{{#if bio}}
		<div class="bio">
			{{{bio}}}
		</div>
		{{/if}}
		<ul class="meta-info">
			{{#if twitter}}
			<li><a href="{{twitter_url}}" target="_blank"><i class="fa fa-twitter"></i></a></li>
			{{/if}}
			{{#if facebook}}
			<li><a href="{{facebook_url}}" target="_blank"><i class="fa fa-facebook"></i></a></li>
			{{/if}}
			{{#if website}}
			<li class="website"><a href="{{website}}" target="_blank"><i class="fa fa-globe"></i></a></li>
			{{/if}}
			{{#if location}}
			<li class="location"><i class="fa fa-map-marker"></i>{{location}}</li>
			{{/if}}
		</ul>
	</div>
</div>
{{/foreach}}
<!-- end about the author -->